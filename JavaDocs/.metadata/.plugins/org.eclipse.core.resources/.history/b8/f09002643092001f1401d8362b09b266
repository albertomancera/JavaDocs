package array;
import java.util.*;

public class Arraybidimensional {
	public static void main(String args[]) {
		Scanner entradaTeclado = new Scanner(System.in);
		
	final int alumnos=5;
	final int modulos=3;
	int sumanotas;
	double media;
	
	int [][]notas = new int [alumnos][modulos];
	String [] nombreAlumnos = {"David","Pepe","Pedro","Juan","Luis"};
	String [] materias = {"Matematicas","Lengua","Ingl√©s"};
	
	for (int i=0; i < alumnos; i++ ) {
		//System.out.println("Alumno "+ i);
		 for (int j=0; j< modulos ;j++) {
			//System.out.println("Materia "+ j);
		       notas[i][j] = (int) (Math.random()*10);
		 }
	}
	
	for(int i=0; i<alumnos; i++) {
		System.out.print("  Alumno "+ nombreAlumnos[i] + ":  ");
		sumanotas = 0;
		for(int j=0; j< modulos; j++){
			System.out.print(notas[i][j]+ "  ");
			sumanotas = sumanotas + notas[i][j];
		}
		media= (double) sumanotas /modulos;
		System.out.println("La nota media es: "+ media);
	}
	}
}

