package ejercicio1;
import java.util.Scanner;

public class Ejercicio1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int local=5;
		int visitante=5;
		
		for (int i=0; i<local ;i++) {
			int goleslocal = (int)(Math.random()*5);
			System.out.println(goleslocal);
		}
		
		for (int j=0; j <visitante ; j++) {
			int golesVisitante = (int)(Math.random()*5);
			System.out.println(golesVisitante);
		}
		
		String apuesta;
		System.out.println("Dime tu apuesta  1: gana el equipo local, X: empate, 2: gana el equipo visitante: ");
		apuesta= sc.nextLine();
		
	}

}
