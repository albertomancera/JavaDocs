package ejercicio;

import java.util.Scanner;

public class EjercicioEstacionamiento {

	public static void main(String[] args) {
		Scanner sc  = new Scanner (System.in);
		
		String patente="", tipoEst;
		int cont0=0, cont1=0, cont2=0;
		double totalDia=0;
		
		while(!patente.equalsIgnoreCase("FIN")) {
		System.out.println("Dime la patente del veh√≠culo: ");
		patente = sc.nextLine();
		
		System.out.println("Dime el ripo de estacionamiento (Por hora, Media jornada o Jornada completa): ");
		tipoEst = sc.nextLine();
		
		
		switch(tipoEst) {
		case "Por hora":
			System.out.println("Dime cuantas horas ha estado estacionado: ");
			int horas= sc.nextInt();
			
			int precio= horas*3;
			System.out.println("Tienes que pagar "+ precio+" $");
			
			cont0++;
			break;
		case "Media jornada":
			double precio1= 15-(15*0.05);
			System.out.println("Tienes que pagar "+precio1+" $");
			cont1++;
			break;
			case "Jornada completa":
				double precio2= 30-(30*0.10);
				System.out.println("Tienes que pagar "+precio2+" $");
				cont2++;
				break;
		}
			sc.nextLine();
		}
		
	}

}
