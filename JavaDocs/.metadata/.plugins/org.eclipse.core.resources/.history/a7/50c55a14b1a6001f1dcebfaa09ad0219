package ejercicio10;
import java.util.Scanner;

public class Ejercicio10 {
	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		
		int dia, mes ,anno;
		
		System.out.println("Introduce el día: ");
		dia = sc.nextInt();
		
		System.out.println("Introduce el mes: ");
		mes = sc.nextInt();
		
		System.out.println("Introduce el año");
		anno = sc.nextInt();

		if (fechacorrecta(dia, mes, anno)) {
			System.out.println("La fecha es: "+dia+mes+anno);
		}else {
			System.out.println("La fecha es incorrecta");
		}
	}
	//Devuelve si la fecha es correcta o no
	public static boolean fechacorrecta(int  dia, int mes, int  anno) {
	boolean fecha;
	
	if (dia<1 || dia>30 || mes <1|| mes >12 || anno<1 || anno>9999) {
		fecha=false;
	}else {
		fecha=true;
	}
		return fecha;
	
	}
}
