package ejercicio1;
import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Ejercicio1 {
	public static void main(String[] args) {
		Scanner entradaTeclado = new Scanner(System.in);

		String anno;
		
		System.out.println("Introduzca un a√±o(entre 1801-2100): ");
		anno = entradaTeclado.nextLine();
		

		Pattern patron=Pattern.compile("[1801-2100");
		Matcher texto= patron.matcher(anno);
		boolean correcto=texto.matches();
		
		do {
		if(correcto) {
			System.out.println("Su DNI es correcto");
		}else {
			System.out.println("Su DNI es incorrecto");
		}
	}while(texto !=correcto);
	}
}
