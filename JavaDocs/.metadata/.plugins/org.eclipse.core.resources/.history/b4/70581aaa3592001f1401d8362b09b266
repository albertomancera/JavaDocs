package ejercicio6;

import java.util.Scanner;

public class Ejercicio6 {
	public static void main(String args[]) {
			Scanner entradaTeclado = new Scanner(System.in);
			
		int num;
		int contador=0;
		
		for (int i = 0; i<100; i++) {
			System.out.println("Dime un número entero: ");
			num= entradaTeclado.nextInt();
			if(num==0) {
				contador++;
			}
			while (num==0) {
				System.out.println("Error, porfavor introduce un número valido.");
			}
		}
		if (contador>0) {
			System.out.println("He leido "+contador+" números negativos");
		}else {
			
		}
		
	}
}
