package ejercicio;

import java.util.Scanner;

public class Ejercicio {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num;

		System.out.println("Introduce un número");
		num = sc.nextInt();
		
		if (num %2 ==0) {
			System.out.println("El número es par");
		}else if (num %2 ==1) {
			System.out.println("El número es impar");
		}else {
			System.out.println("El número es cero");
		}
		if (num %3 ==0 && num %4 == 0) {
			System.out.println("El número es divisible de 3 y 4");
		}else
		if (num %3 ==0) {
			System.out.println("El número es divisible de 3");
		}else if (num %4 ==0) {
			System.out.println("El número es divisible de 4");
		}else {
			System.out.println("El número no es divisible ni de 3 ni de 4");
		}
	
	}

}
