package ejercicio1;

import java.util.Scanner;

public class Ejercicio1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int suma=0;
		int num;
		
		int []numaleatorio = new int [30];
		
		for(int i=0;i<numaleatorio.length; i++ ) {
			numaleatorio[i]=(int) (Math.random()*100);
		}
		
		System.out.println("El mayor número es: "+ esMayor(numaleatorio));
		System.out.println("La suma de los números pares es: "+ sumaPares(numaleatorio));
		
		System.out.println("Dime números del 0 al 100: ");
		num=sc.nextInt();
		
		if (entreNumeros(numaleatorio, num)) {
			System.out.println("Tu numero "+num+" esta entre los números");
		}else {
			System.out.println("Tu número "+num+" no está entre los números");
		}
	}
	//El mayor de los números
	public static int esMayor(int []numaleatorio) {
		int mayor=0;
		
		for(int i=0;i<numaleatorio.length;i++) {
			if (mayor>numaleatorio[i]);
			mayor=numaleatorio[i];
			
		}
		return mayor;
		
	}
	//La suma de los números pares
	public static int sumaPares(int []numaleatorio) {
		int suma=0;
		
		for (int i=0; i<numaleatorio.length; i++) {
			if(numaleatorio[i]%2 ==0) {
		
			}
		}
		return suma;
		
	}
	
	//Decir si esta entre los 30 numeros
	public static boolean entreNumeros(int[]numaleatorio, int num) {
		boolean esta=false;
		
		for (int i=0; i<numaleatorio.length; i++) {
			if(num==numaleatorio[i]) {
				esta=true;
			}
		}
		return esta;
		
	}
}
