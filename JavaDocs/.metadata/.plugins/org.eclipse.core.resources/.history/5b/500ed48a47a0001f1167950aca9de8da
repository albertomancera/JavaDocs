package metodos;

import java.util.Scanner;

public class MetodosFunciones {

	public static void main(String[] args) {
		Scanner sc  = new Scanner (System.in);
		double a, b;
		a = 10;
		b=25;
		String operador="";
		
		System.out.println("Dime un operador para calcular los operandos "+a+" y "+b+" : ");
		operador =sc.nextLine();
		
		System.out.println("El resultado es: "+operacion(a,b,operador));
		
	}
		
		public static double operacion (double a, double b, String operador) {
			double resultado=0;
			switch (operador) {
			case "+":
				resultado= a + b;
			break;
			case "-":
				resultado= a - b;
			break;
			case "*":
				resultado= a*b;
			break;
			case "/":
				resultado= a / b;
			break;
			case "%":
				resultado =a % b ;
			break;
			default:
				System.out.println("Valor introducido incorrecto");
					}
			return (resultado);
		}
	
}
