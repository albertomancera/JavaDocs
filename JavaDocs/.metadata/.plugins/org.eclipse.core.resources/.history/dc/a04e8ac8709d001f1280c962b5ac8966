package ejercicio4;
import java.util.Scanner;

public class Ejercicio4 {
	public static void main(String[] args) {
		Scanner entradaTeclado = new Scanner(System.in);
		
		String frase;
		int contadorA=0;
		int contadorE=0;
		int contadorI=0;
		int contadorO=0;
		int contadorU=0;
		
		
		char a,e,i,o,u;
		
		System.out.println("Dime una frase: ");
		frase = entradaTeclado.nextLine();
		
		frase = frase.toLowerCase();
		
		for (i=0; i< frase.length();i++) {
			switch (frase.charAt(i)) {
			case 'a':
				contadorA++;
			break;
			case 'e':
				contadorE++;
				break;
			case 'i':
				contadorI++;
				break;
			case 'o':
				contadorO++;
				break;
			case 'u':
				contadorU++;
				break;
				default:
					System.out.println("Se ha introducido mal la frase");
				
			
			
			}
		}
			
			
			
		}
}


