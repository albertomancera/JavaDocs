package examen;

import java.time.LocalDate;

public class Embarcacion {
	//Atributos de clase constantes
		public static final String MATRICULA_DEFECTO = "Matrícula por defecto";
		public static final LocalDate FECHA_ACTUAL = LocalDate.now();
		public static final int ESLORA_DEFECTO = 10;
		public static final int NUM_PASAJEROS_DEFECTO = 10;
		public static final boolean BASE_PUERTO_DEFECTO = true;
		
		
	//Atributos de objeto
			protected final String matricula;
			protected LocalDate fecha_construccion;
			protected int eslora;
			protected int num_pasajeros;
			protected boolean base_puerto;
			
			public Embarcacion(String matricula, LocalDate fecha_construccion, int eslora, int num_pasajeros,
					boolean base_puerto) throws IllegalArgumentException{
				if(fecha_construccion.isAfter(FECHA_ACTUAL)) {
					throw new IllegalArgumentException ("La fecha de construcción no puede ser posterior a la actual");
				}
				if(num_pasajeros <= 0) {
					throw new IllegalArgumentException("El número de pasajeros no puede ser negativo ni 0 ");
				}
					
				this.matricula = matricula;
				this.fecha_construccion = fecha_construccion;
				this.eslora = eslora;
				this.num_pasajeros = num_pasajeros;
				this.base_puerto = base_puerto;
			}
			
			public Embarcacion() {
				this(MATRICULA_DEFECTO,FECHA_ACTUAL,ESLORA_DEFECTO,NUM_PASAJEROS_DEFECTO,BASE_PUERTO_DEFECTO);
			}
			
}
