package coche;

public class Pruebas {
	public static void main(String[] args) {
		
		Empleados  trabajador1 = new Empleados("Paco", 1);
		Empleados trabajador2 = new Empleados ("Ana",2);
		
		trabajador1.cambiaSeccion("RRHH");
	
		
		System.out.println(trabajador1.devuelveDatos());
		System.out.println(trabajador2.devuelveDatos());
	}
}

class Empleados{
	
	private int id;
	private final String nombre; //final  para no cambiar los datos
	private String seccion;
	
	public Empleados(String nom, int id) {
		nombre = nom;
		seccion = "Administraci√≥n";
		this.id= id;
	}
	
	//Setter = modifica la seccion
	public void cambiaSeccion(String seccion) {
		this.seccion = seccion;
	}
	

	//Getter muestra los resultados
	public String devuelveDatos() {
		return "El nombre es: " + nombre + " y la seccion es "+ seccion+ " y el ID = "+ id;
	}
}
