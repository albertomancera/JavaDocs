package mobiliario;

public class Sillon extends Asiento implements Ajustable {
	public static final int POS_BAJADO = 0;
	public static final int POS_SUBIDO = 1;
	
	private int posicionSillon;

	public Sillon(double precio, String descripcion, String tapiceria, String color,
			int posicionSillon) throws IllegalArgumentException {
		super(precio, descripcion, Asiento.MIN_PLAZAS, tapiceria, color);
		this.posicionSillon = POS_SUBIDO;
	}

	public int getPosicionSillon() {
		return posicionSillon;
	}


	@Override
	public int obtenerPosicion() {
		return getPosicionSillon();
	}

	@Override
	public int subirPosicion() throws IllegalStateException {
		posicionSillon++;
		if (posicionSillon>POS_SUBIDO) {
			posicionSillon--;
			throw new IllegalStateException("Error: no se pueden subir los pies del sillón. Ya están subidos");
		}
		return posicionPies;
		return 0;
	}


	@Override
	public int bajarPosicion() throws IllegalStateException {
		// TODO Auto-generated method stub
		return 0;
	}
	
	
	@Override
	public String toString() {
		return super.toString() + " posicionSillon=" + posicionSillon;
	}



	
}
